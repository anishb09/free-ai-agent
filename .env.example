# Environment variables for AI Agent
# Copy this file to .env and fill in your API keys

# === PAID API KEYS (Optional) ===
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === FREE API KEYS (Optional) ===
# Hugging Face API Configuration (optional, for better rate limits)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# === MODEL CONFIGURATION ===
# Default model (free options: ollama-llama2, hf-DialoGPT-medium, local-gpt2)
DEFAULT_MODEL=ollama-llama2

# === OLLAMA CONFIGURATION (Local, Free) ===
# Make sure Ollama is installed and running: https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434

# === GENERAL CONFIGURATION ===
LOG_LEVEL=INFO
MAX_CONVERSATION_HISTORY=10
MAX_TOKENS=4000
TEMPERATURE=0.7

# === PLUGIN CONFIGURATION ===
ENABLE_PLUGINS=true
PLUGIN_DIRECTORY=plugins

# === SYSTEM PROMPT ===
SYSTEM_PROMPT=You are a helpful AI assistant.
